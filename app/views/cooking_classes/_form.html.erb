<%= simple_form_for @cooking_class do |f| %>
  <%= f.error_notification %>
<div class="container">
    <div class="row">
      <div class="col-md-6">
        <%= f.input :title, label: "Class Title" %>
      </div>
    <div class="col-md-6">
    <%= f.input :description, as: :text, label: "Class Description" %>
    </div>
</div>

    <div class="row">
      <div class="col-md-6">
        <%= f.input :price, as: :integer, label: "Price", step: 0.01 %>
      </div>
      <div class="col-md-6">
        <%= f.input :address, label: "Class Address" %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <%= f.input :date, as: :string, input_html: { data: { controller: "datepicker" } }, label: "Class Date" %>
      </div>
      <div class="col-md-6">
        <%= f.input :time, as: :time, label: "Class Time" %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <%= f.input :capacity, as: :integer, label: "Maximum Participants", step: 1 %>
      </div>
      <div class="col-md-6">
        <%= f.input :photo, as: :file, label: "Choose a picture" %>
      </div>
    </div>
  <div class="form-group">
    <%= f.button :submit, @cooking_class.new_record? ? "Create Class" : "Save Changes", class: "btn btn-primary" %>

    <% unless @cooking_class.new_record? %>
        <%= button_to "Delete", @cooking_class, method: :delete, class: "btn btn-danger", data: { turbo: "false", turbo_confirm: "Are you sure you want to delete this class?" } %>
    <% end %>
  </div>
</div>
<% end %>
